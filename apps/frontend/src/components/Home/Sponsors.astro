---
import ButtonLink from "../ButtonLink.astro";
import SponsorsList from "./SponsorsList.astro";
---

<section class="full">
  <header>
    <h1>Discover the sponsors that make Strawberry possible.</h1>
    <h2 class="typography-heading-4">More than 150,000 downloads last week.</h2>
  </header>

  <ButtonLink href="/sponsor">Become a sponsor</ButtonLink>

  <SponsorsList />
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
  }

  h1 {
    font-family: var(--font-display);
    font-size: 48px;
    font-style: normal;
    font-weight: 700;
    line-height: 1.2;
    text-align: center;
    margin-bottom: 20px!important;
    text-wrap: balance;
  }

  h2 {
    text-align: center;
    text-wrap: balance;
    color: var(--color-g-700);
  }

  :global(html.dark) h1 {
    color: #fff;
  }

  :global(html.dark) h2 {
    color: var(--color-g-400);
  }
</style>
