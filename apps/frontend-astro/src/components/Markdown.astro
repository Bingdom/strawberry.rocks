---
import { Markdown as AstroMarkdown } from "astro-remote";

import Paragraph from "./Pages/Paragraph.astro";
import List from "./Pages/List.astro";
import OrderedList from "./Pages/OrderedList.astro";
import ListItem from "./Pages/ListItem.astro";
import Heading from "./Pages/Heading.astro";
import Pre from "./Pages/Pre.astro";
import CodeSpan from "./Pages/CodeSpan.astro";
import CodeBox from "./Pages/CodeBox.astro";
import Link from "./Pages/Link.astro";
import Image from "./Pages/Image.astro";
import Blockquote from "./Pages/Blockquote.astro";

interface Props {
  content: string;
}

const { content } = Astro.props;
---

<AstroMarkdown
  content={content}
  components={{
    p: Paragraph,
    ul: List,
    ol: OrderedList,
    li: ListItem,
    Heading,
    pre: Pre,
    CodeSpan: CodeSpan,
    CodeBlock: CodeBox,
    a: Link,
    img: Image,
    blockquote: Blockquote,
  }}
/>
