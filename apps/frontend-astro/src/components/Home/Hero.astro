---
import ButtonLink from "../ButtonLink.astro";
import CodeBox from "../Pages/CodeBox.astro";

const code = `
import strawberry

@strawberry.type
class User:
    name: str

    @strawberry.field
    def is_admin(self) -> bool:
		return self.name == "Patrick"
`.trim();
---

<div class="feature">
  <h1>
    Strawberry is an intuitive <em>GraphQL library</em> for Python, designed for
    modern development.
  </h1>

  <ButtonLink href="/docs">Get Started</ButtonLink>

  <div class="code-wrapper">
    <CodeBox code={code} lang="python" />
  </div>
</div>

<style>
  .feature {
    padding: 40px 0;
    gap: 44px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h1 {
    font-family: var(--font-display);
    font-weight: 500;
    font-size: 40px;
    line-height: 1.2;
    max-width: 1100px;
    margin: 0 auto;
    text-wrap: balance;
    text-align: center;
  }

  :global(html.dark) h1 {
    color: var(--color-white);
  }

  .feature :global(.code) {
    max-width: 620px;
  }

  .code-wrapper {
    align-self: stretch;

    @media (min-width: 640px) {
      align-self: center;
    }
  }

  h1 em {
    color: var(--color-strawberry);
    font-style: normal;
  }

  @media (min-width: 768px) {
    h1 {
      font-size: 60px;
    }
  }
</style>
